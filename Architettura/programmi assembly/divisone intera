num_elem		dcd		5
dati			dcd		4,6,1,7,5
			
			
			mov		r0,#num_elem
			ldr		r1,[r0]  ;ora r1 è il numero di elementi dell'array
			mov		r2,#dati   ; puntatore
			
			mov		r0,#0  ;somma parziale
			
loop
			cmp		r1,#0
			beq		fine_somma
			
			ldr		r3,[r2]
			add		r0,r0,r3
			
			add		r2,r2,#4
			sub		r1,r1,#1
			
			b		loop
fine_somma
			end
			
			
			
